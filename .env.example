# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/watchface-db?retryWrites=true&w=majority

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_EXPIRE=7d

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
API_RATE_LIMIT_MAX=20

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com,https://test1.fuses.fun

# Logging Configuration
LOG_LEVEL=info

# Scraper Configuration
SCRAPER_DELAY=1000
MAX_PAGES_TO_SCRAPE=5
BROWSER_TIMEOUT=30000
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Performance Configuration
CACHE_DURATION=300
COMPRESSION_LEVEL=6

# Database Performance
DB_CONNECTION_TIMEOUT=30000
DB_SOCKET_TIMEOUT=45000
DB_MAX_POOL_SIZE=10

# Security Headers
HELMET_CSP_ENABLED=true
HELMET_HSTS_ENABLED=true

# API Configuration
API_PREFIX=/api
MAX_REQUEST_SIZE=10mb
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Development Configuration (only for development)
DEBUG_MODE=false
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=false 